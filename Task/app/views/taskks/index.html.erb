<p id="notice"><%= notice %></p>

<h1>Listing Taskks</h1>

<!-- Showing pending tasks that have not been completed -->
<h2>Pending Tasks</h2>
<ul>
  <% @pending_tasks.each do | task | %>
  <li><%= task.title %></li>
  <% end %>
</ul>

<!-- Showing the past five completed tasks -->
<h2>Completed Tasks</h2>
<ul>
  <% @completed_tasks[0..4].each do | task | %>
  <li><%= task.title %></li>
  <% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Is completed toggle</th>
      <th>Task list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taskks.each do |taskk| %>
      <tr>
        <td><%= taskk.title %></td>
        <td><%= taskk.description %></td>
        <td><%= taskk.priority %></td>
        <td><%= taskk.due_date %></td>
        <td><%= taskk.is_completed_toggle %></td>
        <td><%= taskk.task_list %></td>
        <td><%= link_to 'Show', taskk %></td>
        <td><%= link_to 'Edit', edit_taskk_path(taskk) %></td>
        <td><%= link_to 'Destroy', taskk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

